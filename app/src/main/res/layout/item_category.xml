<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_car"
        android:contentDescription="@string/default_image" />

    <TextView
        android:id="@+id/item_category_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/item_category_iv"
        app:layout_constraintStart_toStartOf="@+id/item_category_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_category_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>